<UserControl x:Class="ClusterizerGui.Views.MainDisplay.MainDisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClusterizerGui.Views.MainDisplay"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource MaterialDesignPaper}"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1200" x:ClassModifier="internal"
             d:DataContext="{d:DesignInstance local:MainDisplayViewModel, IsDesignTimeCreatable=False}">

    <Grid>

        <!-- MAIN CONTENT EXCEPT LOADING -->
        <Grid IsEnabled="{Binding IsIdle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- EARTH IMAGE -->
                <Canvas Margin="2" x:Name="CanvasEarth" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Image Source="/Ressources/earth.jpg" Stretch="Fill"
                           Width="{Binding Path=ActualWidth, ElementName=CanvasEarth}"
                           Height="{Binding Path=ActualHeight, ElementName=CanvasEarth}" />
                </Canvas>

                <!-- CONFIGURATION -->
                <materialDesign:ColorZone Grid.Column="1"
                                          Width="300"
                                          Mode="PrimaryDark"
                                          Margin="5, 5, 5, 0"
                                          Padding="2" CornerRadius="5"
                                          materialDesign:ElevationAssist.Elevation="Dp3"
                                          VerticalAlignment="Stretch"
                                          HorizontalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label FontSize="16"
                               Margin="10, 4"
                               Content="Point creation configuration"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />
                        <Separator Grid.Row="1" Margin="10" />

                        <!-- Nb column -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <Label Margin="10, 4" Content="Nb Columns:" VerticalAlignment="Center" />

                            <ComboBox Grid.Column="1" Margin="10" MinWidth="200"
                                      VerticalAlignment="Center"
                                      ItemsSource="{Binding AvailableNbColumns}"
                                      SelectedItem="{Binding SelectedNbColumn}">
                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel />
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>
                        </Grid>

                        <!-- Nb Rows -->
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <Label Margin="10, 4" Content="Nb Rows:" VerticalAlignment="Center" />

                            <ComboBox Grid.Column="1" Margin="10" MinWidth="200"
                                      VerticalAlignment="Center"
                                      ItemsSource="{Binding AvailableNbRows}"
                                      SelectedItem="{Binding SelectedNbRows}">
                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel />
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>
                        </Grid>

                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <Label Margin="10, 4" Content="Nb Points to add:" VerticalAlignment="Center" />

                            <ComboBox Grid.Column="1" Margin="10"
                                      MinWidth="200"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      ItemsSource="{Binding AvailableNbPoints}"
                                      SelectedItem="{Binding SelectedNbPoints}">
                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel />
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>
                        </Grid>
                        
                        <!-- SELECT ALGORITHM -->
                        
                        <Grid Grid.Row="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Margin="10, 4" Content="Select Algorithm:" VerticalAlignment="Center" />

                            <ComboBox Grid.Column="1" Margin="10"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Stretch"
                                      ItemsSource="{Binding AlgorithmsAvailable}"
                                      SelectedItem="{Binding SelectedAlgorithm}" />
                        </Grid>



                        <Button Grid.Row="6"
                                Margin="6"
                                Content="Add Points"
                                Command="{Binding AddPointsCommand}" />

                        <StackPanel Grid.Row="7" Orientation="Horizontal">
                            <Label Margin="4" Content="Current point nb:" VerticalAlignment="Center" />
                            <Label Margin="4" Content="{Binding Points.Count}" VerticalAlignment="Center" />

                        </StackPanel>
                        
                        <DataGrid Grid.Row="8"
                                  MinHeight="100"
                                  ItemsSource="{Binding Points}"
                                  AutoGenerateColumns="True">

                        </DataGrid>


                        <Button Grid.Row="9"
                                Margin="6"
                                Content="Clear Points"
                                Command="{Binding ClearPointsCommand}" />
                    </Grid>
                </materialDesign:ColorZone>
            </Grid>

            <!-- SELECTED ALGO CONTENT-->
            <ContentControl Grid.Row="1"
                            Content="{Binding SelectedAlgorithmView}" />

        </Grid>

        <!-- LOADING INDICATOR -->
        <Grid Visibility="{Binding IsIdle, Converter={StaticResource InvertBooleanToVisibilityConverter}}">
            <Grid
                Background="Gray"
                Opacity="0.6">
            </Grid>
            <ProgressBar
                Foreground="Orange"
                Opacity="1"
                Height="100"
                Width="100"
                Style="{StaticResource MaterialDesignCircularProgressBar}"
                Value="40"
                IsIndeterminate="True" />
        </Grid>
    </Grid>
</UserControl>