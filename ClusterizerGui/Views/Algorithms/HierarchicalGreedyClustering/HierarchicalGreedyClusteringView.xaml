<UserControl x:Class="ClusterizerGui.Views.Algorithms.HierarchicalGreedyClustering.HierarchicalGreedyClusteringView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClusterizerGui.Views.Algorithms.HierarchicalGreedyClustering"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:validationRules="clr-namespace:ClusterizerGui.Utils.ValidationRules"
             Background="{DynamicResource MaterialDesignPaper}"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1200" x:ClassModifier="internal"
             d:DataContext="{d:DesignInstance local:HierarchicalGreedyClusteringViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" MaxWidth="400" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>

        <!-- Configuration -->
        <materialDesign:ColorZone Grid.Column="0"
                                  Mode="PrimaryDark"
                                  Margin="0"
                                  Padding="2" CornerRadius="5"
                                  materialDesign:ElevationAssist.Elevation="Dp3"
                                  VerticalAlignment="Stretch"
                                  HorizontalAlignment="Stretch">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label FontSize="16"
                       Margin="10, 4"
                       Content="HGC Configuration"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />
                <Separator Grid.Row="1" Margin="10" />
           
                <Grid Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Margin="10, 4" Content="Search radius"
                           VerticalAlignment="Center" />

                    <Slider
                        VerticalAlignment="Center"
                        Margin="5"
                        Grid.Column="1"
                        Value="{Binding SearchRadius}"
                        Minimum="5"
                        Maximum="200"
                        Style="{StaticResource MaterialDesignDiscreteSlider}"
                        TickFrequency="1" />

                    <TextBox
                        Grid.Column="2"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        VerticalAlignment="Center"
                        Width="100"
                        Margin="10"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto">
                        <TextBox.Text>
                            <Binding Path="SearchRadius" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <validationRules:InRangeIntegerValidationRule MinValue="5" MaxValue="200" />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </Grid>

                <!-- Nb passes -->
                <Grid Grid.Row="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    <Label Margin="10, 4" Content="Nb Levels:" VerticalAlignment="Center" />

                    <ComboBox Grid.Column="1" Margin="10" MinWidth="200"
                              VerticalAlignment="Center"
                              ItemsSource="{Binding AvailableNumberOfLevels}"
                              SelectedItem="{Binding NumberOfLevels}">
                        <ComboBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </ComboBox.ItemsPanel>
                    </ComboBox>
                </Grid>

                <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Margin="20, 4"
                            Content="Run Grid-based Clustering"
                            Command="{Binding RunAlgorithmCommand}" />

                    <Button Margin="20, 4"
                            Content="Clear History"
                            Command="{Binding ClearHistoryCommand}" />
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- VERTICAL SEPARATOR -->
        <GridSplitter Grid.Column="1"
                      Margin="1"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="Transparent"
                      ShowsPreview="True"
                      Width="4" />

        <!-- RESULTS -->
        <DataGrid Grid.Column="2"
                  MinHeight="100"
                  ItemsSource="{Binding History}"
                  CanUserAddRows="False"
                  CanUserSortColumns="True"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="run id" SortMemberPath="RunNumber">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="{x:Type local:HierarchicalGreedyClusteringHistory}">
                            <Label Content="{Binding RunNumber}" HorizontalAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Duration (s)" SortMemberPath="Duration">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="{x:Type local:HierarchicalGreedyClusteringHistory}">
                            <Label Content="{Binding DurationInSecond}" HorizontalAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Total Points" SortMemberPath="NbInitialPoints">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="{x:Type local:HierarchicalGreedyClusteringHistory}">
                            <Label Content="{Binding NbInitialPoints}" HorizontalAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Nb. Clusters" SortMemberPath="NbClusters">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="{x:Type local:HierarchicalGreedyClusteringHistory}">
                            <Label Content="{Binding NbClusters}" HorizontalAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Nb. Un-Clustered Points" SortMemberPath="UnClusteredPoint">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="{x:Type local:HierarchicalGreedyClusteringHistory}">
                            <Label Content="{Binding UnClusteredPoint}" HorizontalAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTemplateColumn Header="Search Radius" SortMemberPath="SearchRadius">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="{x:Type local:HierarchicalGreedyClusteringHistory}">
                            <Label Content="{Binding SearchRadius}" HorizontalAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Number of levels" SortMemberPath="NumberOfLevels">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="{x:Type local:HierarchicalGreedyClusteringHistory}">
                            <Label Content="{Binding NumberOfLevels}" HorizontalAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Points Img">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="{x:Type local:HierarchicalGreedyClusteringHistory}">
                            <!-- WATCH OUT => UpdateSourceTrigger=PropertyChanged DUE TO YET ANOTHER ISSUE IN WPF framework (if we could call this piece of shit a framework) -->
                            <ToggleButton
                                Style="{StaticResource MaterialDesignSwitchDarkToggleButton}"
                                IsChecked="{Binding ShowPointsImageRef, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Show Clusters">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="{x:Type local:HierarchicalGreedyClusteringHistory}">
                            <!-- WATCH OUT => UpdateSourceTrigger=PropertyChanged DUE TO YET ANOTHER ISSUE IN WPF framework (if we could call this piece of shit a framework) -->
                            <ToggleButton
                                Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                                IsChecked="{Binding ShowClusters, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>

</UserControl>
